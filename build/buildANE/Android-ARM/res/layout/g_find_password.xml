<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout android:id="@+id/find_password_layout" android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/landscape_0" xmlns:android="http://schemas.android.com/apk/res/android">
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="#99000000" android:gravity="center" android:orientation="horizontal">
    <LinearLayout android:id="@+id/find_password_dialog_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
      <include android:layout_width="wrap_content" android:layout_height="wrap_content" layout="@layout/g_top_include"/>
      <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/layout_dialog_bottom_bg" android:gravity="center_horizontal" android:orientation="vertical" android:paddingBottom="10dp" android:paddingTop="10dp">
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/layout_white_bg" android:gravity="center_vertical" android:orientation="horizontal" android:paddingBottom="2dp">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_weight="1" android:text="@string/DW_string_6" android:textColor="#555555" android:textSize="17sp"/>
          <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="15dp" android:background="@drawable/btn_back_bg" android:onClick="BackClick" android:text="@string/DW_string_7" android:textColor="#666666"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/find_password_center_layoutOne" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="20dp" android:layout_marginTop="20dp" android:background="@drawable/layout_white_bg" android:gravity="center_vertical" android:orientation="horizontal">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/DW_string_8" android:textColor="#333333" android:textSize="14sp"/>
          <EditText android:id="@+id/find_password_etUserName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:background="@null" android:inputType="textCapWords" android:maxLength="20" android:paddingLeft="5dp" android:singleLine="true" android:textColor="#666666" android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/find_password_center_layoutTwo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_marginTop="15dp" android:background="@drawable/layout_white_bg_and_line" android:orientation="vertical" android:visibility="gone">
          <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_vertical" android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/DW_string_9" android:textColor="#333333" android:textSize="13sp"/>
            <TextView android:id="@+id/find_password_tvQuestion" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:textColor="#666666" android:textSize="13sp"/>
          </LinearLayout>
          <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_vertical" android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/DW_string_10" android:textColor="#333333" android:textSize="13sp"/>
            <EditText android:id="@+id/find_password_etAnswer" android:layout_width="0dip" android:layout_height="wrap_content" android:layout_weight="1" android:background="@null" android:inputType="textCapWords" android:maxLength="20" android:paddingLeft="5dp" android:singleLine="true" android:textColor="#666666" android:textSize="13sp"/>
          </LinearLayout>
        </LinearLayout>
        <LinearLayout android:id="@+id/find_password_center_layoutThree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:layout_marginTop="15dp" android:background="@drawable/layout_white_big_bg" android:gravity="center_vertical" android:orientation="vertical" android:visibility="gone">
          <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:text="@string/DW_string_11" android:textColor="#666666" android:textSize="14sp"/>
            <TextView android:id="@+id/find_password_tvPassword" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:textColor="#771111" android:textSize="14sp"/>
            <TextView android:id="@+id/find_password_tvCopy" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:textColor="#771111" android:textSize="16sp"/>
          </LinearLayout>
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="5dp" android:text="@string/DW_string_12" android:textColor="#666666" android:textSize="14sp"/>
        </LinearLayout>
        <Button android:id="@+id/find_password_btnNext" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:background="@drawable/btn_green_verybig" android:onClick="NextClick" android:text="@string/DW_string_13" android:textColor="@color/tv_text_color_btn_next" android:textSize="16sp"/>
        <Button android:id="@+id/find_password_btnBack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="15dp" android:background="@drawable/btn_orange_verybig" android:onClick="BackLandingClick" android:text="@string/DW_string_14" android:textColor="#6a3600" android:textSize="16sp" android:visibility="gone"/>
        <TextView android:id="@+id/find_password_tvMessage" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_marginLeft="10dp" android:drawableLeft="@drawable/landing_bottom_message_img" android:paddingLeft="10dp" android:text="@string/DW_string_15" android:textColor="#666666" android:textSize="12sp"/>
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
</LinearLayout>