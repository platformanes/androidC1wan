<resources>

    <style name="TextCenterPayRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <!-- 定义一个样式，继承android系统的对话框样式 android:style/Theme.Dialog -->
    <style name="Theme.PayActivity" parent="android:style/Theme.Dialog">

        <!-- float_box为我们定义的窗口背景 -->
        <item name="android:windowBackground">@drawable/pay_bg_box</item>
    </style>

    <style name="Theme.NoTitle.my" parent="@android:style/Theme.Translucent">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="ThemeActivity">

        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/zoom_enter</item>
        <!-- 当前activity打开时，进入的activity的动画 -->
        <item name="android:activityOpenExitAnimation">@null</item>
        <!-- 当前activity打开时，退出的activity的动画 -->
        <item name="android:activityCloseEnterAnimation">@null</item>
        <!-- 当前activity关闭时，进入的activity的动画 -->
        <item name="android:activityCloseExitAnimation">@anim/zoom_exit</item>
        <!-- 当前activity关闭时，退出的activity的动画 -->
    </style>

</resources>